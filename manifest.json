{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Tabroom Tournament Button",
    "description": "Numerous fixes and features for Tabroom.com",
    "version": "2.1.0",
    "manifest_version": 3,
    "permissions": ["storage"],
    "background": {
        "service_worker": "background/background.js"
    },
    "action": {
        "default_icon": "icons/128.png",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.tabroom.com/*"],
            "js": ["scripts/content.js"]
        },
        {
            "matches": ["*://www.tabroom.com/user/student/index.mhtml*"],
            "js": ["scripts/currentpage.js", "scripts/currentpanel.js"]
        },
        {
            "matches": ["*://www.tabroom.com/user/student/history.mhtml?tourn_id=*"],
            "js": ["scripts/resultspage.js"]
        },
        {
            "matches": ["*://www.tabroom.com/index/tourn/postings/round.mhtml*"],
            "js": ["scripts/pairingspage.js"]
        },
        {
            "matches": ["*://www.tabroom.com/index/tourn/postings/judge.mhtml?judge_id=*"],
            "js": ["scripts/judgenotes.js", "scripts/judgestats.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["notes/notes.html", "notes/notes.css", "notes/notes.js", "stats/stats.html", "hype/panel.html"],
            "matches": ["*://*.tabroom.com/*"]
        }
    ],
    "commands": {
        "opentab": {
            "suggested_key": {
                "default": "Alt+T"
            },
            "description": "Opens Tabroom"
        }
    }
}
